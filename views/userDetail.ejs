<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="../css/style.css" />
    <style>
      .list-unstyled li a {
      text-decoration: none; 
      color: white; 
      }
      .ig img {
          width: 50px;
          height: 100px;
      }
      .my-4-5 {
          margin-top: 1.5rem; 
          margin-bottom: 1.5rem; 
      }
      a.active-link {
          color: black !important;
      }
      button{
          margin-top: 10px;
          width: 90px;
          height: 45px;
      }
      .custom-img-size {
          width: 200px; 
          height: 250px;
      }
</style>
  
  </head>
  <body>
    <div class="container-fluid">
        <div class="row vh-100">
            <div class="col-lg-3 bg-secondary ">
                <div class="row py-2 border-bottom">
                    <h1>Admin</h1>
                </div>
                <ul class="list-unstyled">
                  <li class="my-3"><a href="/admin/userInfo"><i class="bi bi-house-door"></i> User Informaton </a></li>
                  <!-- <li class="my-4-5"><a href="/styles"><i class="bi bi-newspaper"></i> Styles</a></li> -->
                  <li class="my-4-5"><a href="/admin/profile"><i class="bi bi-person-square"></i> Profile</a></li>
                  <li class="my-4-5"><a href="/admin/experience"><i class="bi bi-columns-gap"></i> Experience</a></li>
                  <li class="my-4-5"><a href="/admin/education"><i class="bi bi-columns-gap"></i> Education</a></li>
                  <li class="my-4-5"><a href="/admin/skills"><i class="bi bi-house-door"></i> Skills</a></li>
                  <li class="my-4-5"><a href="/admin/works"><i class="bi bi-book-half"></i> Works</a></li>
                  <li class="my-4-5"><a href="/admin/contact"><i class="bi bi-envelope"></i> Contact</a></li>
                  <li class="my-4-5"><a href="/admin/social"><i class="bi bi-envelope"></i> Social</a></li>
                </ul>
            </div>
            <div class="col-lg-9  ">
                <div class="row text-center">
                    <h3>View User</h3> 
                 
                </div>
                
                <form action="/admin/uu/<%= userDetail.id %>" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="name">Name:</label>
                          <input type="text" class="form-control" id="name" value="<%= userDetail.name %>" name="name">
                          <label for="job">Job:</label>
                          <input type="text" class="form-control" id="job" value="<%= userDetail.job %>" name="job">
                          <label for="image">Image:</label>
                          <img src="../../<%= userDetail.image %>" alt="" class=" img-fluid " width="200px" height="10px">
                          <input type="file"  name="image" /><br>
                          <label for="avata">Avata:</label>
                          <img src="../../<%= userDetail.icon %>" alt="" class=" img-fluid mt-3" width="200px"  >
                          <input type="file"  name="icon" /><br>
                          <label for="title">Title:</label>
                          <input type="text" class="form-control" id="title" value="<%= userDetail.title %>" name="title">
                          <label for="information">Information:</label> 
                          <input type="text" class="form-control" id="information" value="<%= userDetail.information %>" name="information">
                         
                          
                    </div>
                    <button type="submit" class="btn btn-dark">Edit</button>
                 
                   
                  </form>
                  <a href="/admin/userInfo"><button  class="btn btn-dark">Cancel</button></a> 
                  </div>
        </div>
    </div>
    
  </body>
</html>